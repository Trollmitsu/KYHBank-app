<p><a class="btn" asp-page="/AllCustomers/Customer" asp-route-customerId="@Model.CustomerId">Back To Customer Profile</a></p>

@section Scripts
{
    <script>
        pageNo = 1;
        function fetchMore() {
            fetch("Transactions?handler=FetchMore&pageNo=" + pageNo + "&personId=@Model.AccoundId")
                .then((response) => response.json())
                .then((json) => {
                        pageNo = pageNo + 1;
                        json.items.forEach(tableElements);
                    }
                );
        }
        function tableElements(element) {
            document.querySelector('#posts-table, tbody').innerHTML +=
            `<tr>
                <td>${element.type}</td>
                <td>${element.date}</td>
                <td>${element.amount}</td>
                <td>${element.operation}</td>
                <td>${element.newBalance}</td>
                </tr>`;
        }
        document.addEventListener("DOMContentLoaded", function () {
            fetchMore();
        });
    </script>
    
}

