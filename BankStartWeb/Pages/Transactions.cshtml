@page
@model BankStartWeb.Pages.TransactionsModel
@{
}
<h3>Total Balance</h3>
    <h4>@Model.Account.Balance kr</h4>

<p><a asp-page="/Swish" asp-route-customerId="@Model.CustomerId">Send Money</a></p>
<p><a asp-page="/deposit" asp-route-accountId="@Model.AccoundId" asp-route-customerId="@Model.CustomerId">Deposit </a></p>
    
<table class="table" style="width:100%">
    <tr>
        
        
        <th>Type</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Operation</th>
        <th>New Balance</th>
    </tr>
    
    @foreach(var Transaction in Model.transaction)
    {
     <tr>
        <td>@Transaction.Type</td>
        <td>@Transaction.Date</td>
        <td>@Transaction.Amount</td>
        <td>@Transaction.Operation</td>
        <td>@Transaction.NewBalance</td>
    </tr>
    }
</table>
<p><a asp-page="/Customer" asp-route-customerId="@Model.CustomerId">Back To Customer Profile</a></p>

